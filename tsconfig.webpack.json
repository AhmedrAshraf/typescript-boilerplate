{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "listEmittedFiles": false,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "module": "es6",
        "importHelpers": true
    },
    "exclude": [
        "../node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}