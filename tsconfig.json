{
    "__comment": {
        "##module": "some old node version does not support ES6 import yet"
    },
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "rootDir": "lib-ts",
        "sourceMap": false,
        "moduleResolution": "node",
        "listEmittedFiles": false,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "pretty": true,
        "jsxFactory": "preact.h",
        "module": "commonjs",
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}