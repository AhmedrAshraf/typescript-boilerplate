{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A starting point for node.js & TypeScript application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test:ts": "               mocha --reporter list --require ts-node/register lib-ts/_test_/**/*.ts || true",
    "test": "npm run build; mocha --reporter list                               lib/_test_/**/*.js || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/node-typescript-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "TypeScript",
    "boilerplate"
  ],
  "author": "Wang Guan <momocraft@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/jokester/node-typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "homepage": "https://github.com/jokester/node-typescript-boilerplate#readme",
  "dependencies": {
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^6.0.52",
    "@types/chai": "^3.4.34",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "mocha-typescript": "^1.0.15",
    "ts-node": "^1.7.2",
    "typescript": "^2.1.4"
  }
}
